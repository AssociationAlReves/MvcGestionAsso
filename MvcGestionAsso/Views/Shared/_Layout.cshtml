<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestion Association</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
</head>
<body>
    <!-- Bootstrap modal -->
    <div id="mainModal" class="modal fade in">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="mainModalContent"></div>
            </div>
        </div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gestion Association", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @* Security *@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">Sécurité <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Rôles", "Index", "ApplicationRoles")</li>
                            <li>@Html.ActionLink("Utilisateurs", "Index", "ApplicationUsers")</li>
                        </ul>
                    </li>

                    @* Activites *@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">Activités <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Lieux", "Index", "Lieux")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Catégories", "Index", "CategoriesActivite")</li>
                            <li>@Html.ActionLink("Activités", "Index", "Activites")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Formules", "Index", "Formules")</li>
                        </ul>
                    </li>

                    @* Gestion *@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False">Adhérents <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Adhérents", "Index", "Adherents")</li>
                            <li>@Html.ActionLink("Abonnements", "Index", "Abonnements")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Règlements", "Index", "Reglements")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Missions", "Index", "Missions")</li>
                            <li>@Html.ActionLink("Intervenants", "Index", "Intervenants")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mvc Gestion Association</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>